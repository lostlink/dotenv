{
    "name": "lostlink/laravel",
    "type": "project",
    "description": "LostLink Project",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.0|^8.1",
        "blade-ui-kit/blade-heroicons": "^1.2",
        "blade-ui-kit/blade-icons": "^1.1",
        "blade-ui-kit/blade-ui-kit": "^0.3.2",
        "calebporzio/sushi": "^2.3",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "jantinnerezo/livewire-alert": "^2.2",
        "laravel/framework": "^8.75",
        "laravel/jetstream": "^2.5",
        "laravel/octane": "^1.1",
        "laravel/sanctum": "^2.11",
        "laravel/tinker": "^2.5",
        "laravel/vapor-core": "^2.17",
        "livewire-ui/modal": "^1.0",
        "livewire/livewire": "^2.5",
        "mad-web/laravel-robots": "^3.0",
        "pestphp/pest": "^1.16",
        "pestphp/pest-plugin-laravel": "^1.1",
        "power-components/livewire-powergrid": "^1.5",
        "romanzipp/laravel-seo": "^2.3",
        "sentry/sentry-laravel": "^2.10",
        "spatie/laravel-ray": "^1.27",
        "spatie/laravel-sitemap": "^6.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.6",
        "barryvdh/laravel-ide-helper": "^2.10",
        "beyondcode/laravel-query-detector": "^1.5",
        "brainmaestro/composer-git-hooks": "^2.8",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.4",
        "laravel/sail": "^1.0.1",
        "laravel/vapor-cli": "^1.34",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0",
        "pestphp/pest-plugin-livewire": "^1.0",
        "phpmd/phpmd": "^2.11",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5.10",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.6",
        "tightenco/duster": "^0.3.2",
        "tightenco/tighten-coding-standard": "^1.0",
        "tightenco/tlint": "^6.2",
        "wulfheart/pretty_routes": "^0.3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "hooks": "cghooks",
        "check": [
            "./vendor/bin/tlint",
            "./vendor/bin/phpcs",
            "./vendor/bin/php-cs-fixer fix --dry-run",
            "./vendor/bin/phpmd app ansi .phpmd.xml.dist",
            "./vendor/bin/phpstan analyze"
        ],
        "fix": [
            "./vendor/bin/php-cs-fixer fix",
            "./vendor/bin/phpcbf"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan vendor:publish --force --tag=livewire:assets --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/bin/cghooks add --ignore-lock"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "[ $COMPOSER_DEV_MODE -eq 0 ] || php artisan ide-helper:generate",
            "[ $COMPOSER_DEV_MODE -eq 0 ] || php artisan ide-helper:meta",
            "[ $COMPOSER_DEV_MODE -eq 0 ] || ./vendor/bin/cghooks update"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "hooks": {
            "pre-commit": [
                "FILES=$(git diff --name-only --diff-filter=ACMRTUXB --cached)",
                "if ! echo \"${FILES}\" | grep -qE \"^(\\.php-cs-fixer(\\.dist)?\\.php|composer\\.lock)$\"; then EXTRA_ARGS=$(printf -- '--path-mode=intersection\n--\n%s' \"${FILES}\"); else EXTRA_ARGS=''; fi",
                "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -v --stop-on-violation --using-cache=no ${EXTRA_ARGS}",
                "./vendor/bin/phpcbf ${FILES}",
                "git add $FILES"
            ],
            "pre-push": [
                "FILES=$(git diff --name-only --cached --diff-filter=ACMRTUXB origin/$(git rev-parse --abbrev-ref HEAD))",
                "for FILE in `echo ${FILES}`; do ./vendor/bin/tlint lin ${FILE}; done;",
                "./vendor/bin/phpcs ${FILES}",
                "./vendor/bin/phpmd app ansi .phpmd.xml.dist",
                "./vendor/bin/phpstan analyze ${FILES}",
                "php artisan test"
            ],
            "post-merge": [
                "composer install",
                "npm install"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "packagist.org": false,
        "private-packagist": {
            "type": "composer",
            "url": "https://repo.packagist.com/ytz/lostlink/"
        }
    }
}
